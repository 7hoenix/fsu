<h1>Available Classes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
    <% if schedule.lecture_id == @lecture.id %>
      <tr>
        <td><%= schedule.day %></td>
        <td><%= schedule.start %></td>
        <td><%= schedule.duration %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
